{
  "name": "my-blog",
  "version": "1.0.0",
  "description": "A modern, minimalistic blog built with Eleventy and Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/input.css -o ./src/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "start": "npm run build:css && npx @11ty/eleventy --serve --watch",
    "build": "npm run build:css && npx @11ty/eleventy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.3",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "markdown-it": "^14.1.0",
    "nunjucks": "^3.2.4",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.5"
  }
} 