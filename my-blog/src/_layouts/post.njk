---
layout: base.njk
---

<article>
  <header class="mb-10 pb-8 border-b border-gray-800">
    <h1 class="text-4xl font-bold mb-4 tracking-tight">{{ title }}</h1>
    <div class="text-gray-400 text-sm flex flex-wrap items-center">
      <time datetime="{{ date | date('YYYY-MM-DD') }}" class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        {{ date | date("MMMM D, YYYY") }}
      </time>
      
      {% if tags and tags.length > 0 %}
      <div class="ml-4 flex flex-wrap">
        {% for tag in tags %}
          {% if tag != "post" %}
            <a href="/tags/{{ tag }}/" class="inline-flex items-center bg-gray-800 text-gray-300 px-3 py-1 text-xs rounded mr-2 mb-2 hover:bg-gray-700 transition-colors duration-200">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              {{ tag }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>

  <div class="prose prose-lg">
    {{ content | safe }}
  </div>
</article> 